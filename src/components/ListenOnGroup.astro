---
import ListenOn from "./ListenOn.astro";

interface Props {
  appleMusic: string;
  spotify: string;
  youtube: string;
  more: string;
}

const { appleMusic, spotify, youtube, more } = Astro.props;
---

<div class="flex gap-2">
  <ListenOn platform="spotify" href={spotify} />
  <ListenOn platform="applemusic" href={appleMusic} />
  <ListenOn platform="youtube" href={youtube} hideOnSm />
  <ListenOn platform="moreplatforms" href={more} />
</div>
